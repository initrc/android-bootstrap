<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/colorPrimary</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/m6</item>
        <item name="android:layout_marginBottom">@dimen/m6</item>
        <item name="android:tint">@color/colorPrimary</item>
        <!-- use app: instead of android: so that it doesn't take the colorAccent on low APIs. -->
        <item name="backgroundTint">@color/colorAccent</item>
        <!-- so that it's round and it has shadows. -->
        <item name="borderWidth">0dp</item>
    </style>
</resources>
